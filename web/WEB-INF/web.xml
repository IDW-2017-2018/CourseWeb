<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- PARAMS -->
    <context-param>
        <param-name>view.outline_template_eng</param-name>
        <param-value>/eng/outline.html.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template_ita</param-name>
        <param-value>/ita/outline.html.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>/error.html.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>/templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>uploads.directory</param-name>
        <param-value>C:/CourseWeb</param-value>
    </context-param>
    <!-- DATA PARAMS -->
    <context-param>
        <param-name>view.data.authors</param-name>
        <param-value>Di Giosaffatte Valentino - Di Prinzio Riccardo Armando - Furia Flavio</param-value>
    </context-param>
    <!-- SERVLETS -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>courseweb.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchCourses</servlet-name>
        <servlet-class>courseweb.controller.SearchCourses</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCourses</servlet-name>
        <url-pattern>/searchcourses</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Help</servlet-name>
        <servlet-class>courseweb.controller.Help</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Help</servlet-name>
        <url-pattern>/help</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Contacts</servlet-name>
        <servlet-class>courseweb.controller.Contacts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Contacts</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>About</servlet-name>
        <servlet-class>courseweb.controller.About</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>About</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Course</servlet-name>
        <servlet-class>courseweb.controller.Course</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Course</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BackOfficeHub</servlet-name>
        <servlet-class>courseweb.controller.BackOfficeHub</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackOfficeHub</servlet-name>
        <url-pattern>/backofficehub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BackOfficeUser</servlet-name>
        <servlet-class>courseweb.controller.BackOfficeUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackOfficeUser</servlet-name>
        <url-pattern>/backofficeuser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BackOfficeCourse</servlet-name>
        <servlet-class>courseweb.controller.BackOfficeCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackOfficeCourse</servlet-name>
        <url-pattern>/backofficecourse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BackOfficeEditCourse</servlet-name>
        <servlet-class>courseweb.controller.BackOfficeEditCourse</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <!-- max size of accepted uploadd (DEF: unlimited!) -->
            <max-request-size>418018841</max-request-size>
            <!-- max size of multipart requests (may contain more files or data) (DEF: ulimited!) -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackOfficeEditCourse</servlet-name>
        <url-pattern>/backofficeeditcourse</url-pattern>
    </servlet-mapping>
    <!-- CONFIGS -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/courseweb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
