<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <!-- PARAMS -->
    
    <context-param>
        <param-name>view.outline_template_eng</param-name>
        <param-value>/eng/outline.html.ftl</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.outline_template_ita</param-name>
        <param-value>/ita/outline.html.ftl</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>/error.html.ftl</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>/templates</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    
    <!-- DATA PARAMS -->
    
    <context-param>
        <param-name>view.data.authors</param-name>
        <param-value>Di Giosaffatte Valentino - Di Prinzio Riccardo Armando - Furia Flavio</param-value>
    </context-param>
    
    <!-- SERVLETS -->
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>courseweb.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- CONFIGS -->
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/courseweb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
